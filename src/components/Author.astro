---
import { Image } from "astro:assets";
import Ava from "@src/assets/img/avatar.jpg";

type PicSize = "sm" | "md" | "lg";
interface Props {
	picSize: PicSize;
}
const { picSize } = Astro.props;
---

<div class='flex gap-4 items-center leading-tight not-prose'>
	<a
		href='https://github.com/techntv'
		target='_blank'
		rel='noopener noreferrer'
		class:list={[
			'rounded-full overflow-hidden shrink-0',
			{ 'w-12 h-12': picSize === 'sm' },
			{ 'w-[70px] h-[70px]': picSize === 'md' },
			{ 'w-[90px] h-[90px]': picSize === 'lg' }
		]}
	>
		<Image src={Ava} alt='Vinh Nguyen' />
	</a>
	<div>
		<div>
			<a
				href='https://github.com/techntv'
				class='block font-bold text-inherit hover:text-[var(--link-color)]'
				target='_blank'
				rel='noopener noreferrer'
			>
				Vinh Nguyen
			</a>
		</div>
		<small class='avatar__subtitle'>Frontend Engineer</small>
	</div>
</div>
